include README.md
include LICENSE

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
global-exclude __pycache__

# special files to include with PyPI distribution
include versioneer.py
include kappa/_version.py
include kappa/saved_bundle/kappa-init.sh
include kappa/saved_bundle/docker-entrypoint.sh
graft kappa/server/static_content
graft kappa/configuration

# include migration files
graft kappa/gamma/migrations
include kappa/gamma/alembic.ini

# include gamma server UI distribution files
graft kappa/gamma/web/dist

# include Sagemaker deployment file
include kappa/gamma/deployment/sagemaker/nginx.conf
include kappa/gamma/deployment/sagemaker/serve

# include files for Azure function deployment
include kappa/gamma/deployment/azure_functions/host.json
include kappa/gamma/deployment/azure_functions/local.settings.json
include kappa/gamma/deployment/azure_functions/Dockerfile

prune e2e_tests
prune tests
prune benchmark
